<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-3 m-5 shadow">
        <h3 class="mb-5">Create a new Doctor</h3>
        <%= simple_form_for @doctor do |f| %>
          <%= f.input :first_name, placeholder: 'Henri' %>
          <%= f.input :last_name, placeholder: 'Dupont' %>
          <%= f.input :speciality, placeholder: 'Dentist' %>

          <%= f.submit class: "btn btn-light shadow mt-2 mb-2 p-3" %>
        <% end %>
        <%= link_to 'Back', doctors_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
      </div>
    </div>
  </div>
</div>
