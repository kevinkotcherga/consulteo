<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-5 m-5 shadow">
        <h1 class="mb-5">Doctors</h1>

        <div class="row">
            <% @doctors.each do |doctor| %>
              <div>
                <%= link_to doctor_path(doctor), class: "btn btn-light shadow mt-2 mb-2" do %>
                    <div class="p-3">Dr. <%= doctor.last_name %></div>
                <% end %>
              </div>
            <% end %>
          </div>

        <%= link_to 'Create Doctor', new_doctor_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
        <%= link_to 'Back', root_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
      </div>
    </div>
  </div>
</div>
