<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-5 m-5 shadow">
        <h1 class="mb-5">Patients</h1>

        <div class="row">
            <% @patients.each do |patient| %>
              <div>
                <%= link_to patient_path(patient), class: "btn btn-primary m-1" do %>
                    <%= patient.last_name %>
                <% end %>
              </div>
            <% end %>
          </div>

        <%= link_to 'Create Patient', new_patient_path, class: 'btn btn-info m-1' %>
        <%= link_to 'Back', root_path, class: 'btn btn-info m-1' %>
      </div>
    </div>
  </div>
</div>
