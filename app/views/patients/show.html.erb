<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-5 m-5 shadow h-100 position-relative">
        <h1 class="mb-5"><%= @patient.last_name %></h1>

        <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
          <%= link_to "Delete", patient_path(@patient), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: 'btn btn-danger shadow mt-5 me-3 p-3' %>

          <%= link_to 'Edit', edit_patient_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
          <%= link_to 'Back', patients_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
