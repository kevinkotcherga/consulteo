<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-5 m-5 shadow h-100 position-relative">
        <h3 class="mb-5 d-flex justify-content-center">Edit Patient</h3>
        <div class="d-flex justify-content-center w-100">
          <%= simple_form_for @patient do |f| %>
            <%= f.input :first_name, placeholder: 'Henri' %>
            <%= f.input :last_name, placeholder: 'Dupont' %>
            <%= f.input :social_security_number, placeholder: '1243' %>
            <%= f.submit class: 'btn btn-light shadow mt-2 mb-2 p-3' %>
          <% end %>
        </div>
        <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
          <%= link_to 'Back', patients_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
