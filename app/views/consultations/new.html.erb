<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-5 m-5 shadow h-100 position-relative">
        <h3 class="mb-5 d-flex justify-content-center">Create consultation</h3>
        <div class="d-flex justify-content-center w-100">
          <%= simple_form_for @consultation do |f| %>
            <%= f.association :doctor, collection: @doctors, :label_method => :last_name, :value_method => :id, :include_blank => false, prompt: "Select a doctor", input_html: { data: { controller: "slect2" } } %>
            <%= f.association :patient, collection: @patients, :label_method => :last_name, :value_method => :id, :include_blank => false, prompt: "Select a patient", input_html: { data: { controller: "slect2" } } %>
            <%= f.submit class: "btn btn-light shadow mt-2 mb-2 p-3 w-100" %>
          <% end %>
        </div>
        <div class="d-flex justify-content-end position-absolute bottom-0 end-0 p-3">
          <%= link_to 'Create Doctor', new_doctor_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
          <%= link_to 'Create Patient', new_patient_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
          <%= link_to 'Back', root_path, class: 'btn btn-light shadow mt-5 me-3 p-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
